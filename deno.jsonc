{
  "compilerOptions": {
    "allowJs": true,
    "strict": true
  },
  "fmt": {
    "files": {
      "include": ["./"]
    },
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "proseWrap": "always",
      "singleQuote": true,
      "useTabs": false
    }
  },
  "lint": {
    "files": {
      "include": ["./"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  }
}
